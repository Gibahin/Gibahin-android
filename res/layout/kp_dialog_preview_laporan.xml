<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/spacing_middle"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/attachment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/kawalpilpres_primary"
            android:minHeight="150dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/tps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    app:backgroundTint="@android:color/white"
                    android:background="@drawable/btn_rounded_primary"
                    android:text="TPS 02"
                    android:textColor="@color/kawalpilpres_primary" />

                <ImageView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tps"
                    android:src="@drawable/ic_check_circle_white_18dp"
                    android:tint="@color/blue" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="@dimen/spacing_medium"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="top"
                            android:src="@drawable/ic_location_on_white_24dp"
                            android:tint="@color/gray50" />

                        <TextView
                            android:id="@+id/daerah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords|textMultiLine"
                            android:maxLines="2"
                            android:padding="8dp"
                            android:text="Provinsi > Kabupaten/Kota > Kecamatan > Kelurahan"
                            android:textAlignment="center"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/kawalpilpres_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp">

                        <android.support.percent.PercentRelativeLayout
                            android:id="@+id/itemLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="3dp">

                            <LinearLayout
                                android:id="@+id/lCount1"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                app:layout_widthPercent="50%">

                                <TextView
                                    android:id="@+id/count1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:text="1000"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Paslon 01"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lCount2"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/lCount1"
                                android:orientation="vertical"
                                android:padding="5dp"
                                app:layout_widthPercent="50%">

                                <TextView
                                    android:id="@+id/count2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:text="1000"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Paslon 02"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                            </LinearLayout>
                        </android.support.percent.PercentRelativeLayout>

                        <android.support.percent.PercentRelativeLayout
                            android:id="@+id/itemLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="3dp">

                            <LinearLayout
                                android:id="@+id/lsah"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                app:layout_widthPercent="50%">

                                <TextView
                                    android:id="@+id/s1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:text="2000"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Suara Sah"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ltdksah"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/lsah"
                                android:orientation="vertical"
                                android:padding="5dp"
                                app:layout_widthPercent="50%">

                                <TextView
                                    android:id="@+id/n1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:enabled="false"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:text="2000"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tidak Sah"
                                    android:textAlignment="center"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
                            </LinearLayout>
                        </android.support.percent.PercentRelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>